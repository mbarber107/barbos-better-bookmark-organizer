{
  "manifest_version": 2,
  "name": "Barbo's Better Bookmark Organizer",
  "version": "1.0.0",
  "description": "Organize, tag, and maintain your bookmarks efficiently. Remove duplicates and find unused bookmarks.",

  "permissions": [
    "bookmarks",
    "storage",
    "tabs",
    "history"
  ],

  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },
    "default_title": "Barbo's Better Bookmark Organizer",
    "default_popup": "popup/popup.html"
  },

  "background": {
    "scripts": ["background/background.js"]
  },

  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  }
}
